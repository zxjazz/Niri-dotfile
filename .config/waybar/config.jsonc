{
    "layer": "top",
    "position": "top",
    "height": 36,
    "margin-top": 3,
    "margin-left": 2,
    "margin-right": 2,
    "margin-bottom": 1,
    "reload_style_on_change": true,
    "spacing": 11,
    "modules-left": [
        "custom/launcher",
        "niri/workspaces",
        "mpris"
    ],
    "modules-center": [
        "clock",
        "custom/notification"
    ],
    "modules-right": [
        "privacy",
        "idle_inhibitor",
        "custom/clipboard",
        // "custom/vkeyboard",
        "pulseaudio",
        "backlight",
        "battery",
        "tray",
        "custom/power"
    ],
    "niri/workspaces": {
        "format": "{icon}",
    },
    "mpris": {
        "player-icons": {
            "default": "üéµ"
        },
        "format": "‚è∏ {dynamic}",
        "format-paused": "‚ñ∂ {dynamic}",
        "format-stopped": "‚èπ Stopped",
        "interval": 1,
        "max-length": 60
    },
    "idle_inhibitor": {
        "format": "{icon}",
        "format-icons": {
            "activated": "Û∞àà",
            "deactivated": "Û∞àâ"
        }
    },
    "tray": {
        "spacing": 10
    },
    "clock": {
        "format": "Û∞•î {:%R  Û∞É≠ %A %d}",
        "tooltip-format": "<tt><small>{calendar}</small></tt>",
        "interval": 60
    },
    "backlight": {
        "tooltip": false,
        "format": "{icon} {percent}%",
        "format-icons": ["‚òÄ"],
        "on-scroll-up": "brightnessctl --exponent=2 set 2%+",
        "on-scroll-down": "brightnessctl --exponent=2 set 2%-"
    },
    "battery": {
        "states": {
            "good": 80,
            "warning": 40,
            "critical": 20
        },
        "format-charging": "<b>‚ÜØ {capacity}%</b>",
        "format": "{icon} {capacity}%",
        "format-icons": [
            "ÔâÑ",
            "ÔâÉ",
            "ÔâÇ",
            "ÔâÅ",
            "ÔâÄ"
        ],
        "interval": 1,
        "tooltip": true
    },
    "pulseaudio": {
        // "scroll-step": 1, // %, can be a float
        "tooltip": false,
        "format": "{icon} {volume}%",
        "format-bluetooth": "Ôäî {volume}%",
        "format-bluetooth-muted": "Ôäî {volume}%",
        "format-muted": "Û∞ùü {volume}%",
        "format-source": "{volume}% ÔÑ∞",
        "format-source-muted": "ÔÑ± ",
        "format-icons": {
            "headphone": "ÔÄ•",
            "phone": "ÔÇï",
            "portable": "ÔÇï",
            "car": "ÔÜπ",
            "default": ["Û∞ïø", "Û∞ñÄ", "Û∞ïæ"],
        },
        "interval": 60,
        "on-click": "pamixer --toggle-mute",
        "on-scroll-up": "pamixer --allow-boost --set-limit 150 --increase 2",
        "on-scroll-down": "pamixer --allow-boost --set-limit 150 --decrease 2",
        "tooltip": true
    },
    "custom/launcher": {
        "format": "ÔåÉ",
        "on-click": "pgrep fuzzel && pkill fuzzel || fuzzel",
        "tooltip-format": "Launcher"
    },
    "custom/clipboard": {
        "format": "Û∞Öá",
        "on-click": "pgrep fuzzel && pkill fuzzel || cliphist-fuzzel-img",
        "tooltip-format": "Clipboard"
    },
    "custom/vkeyboard": {
        "format": "ÔÑú",
        "on-click": "pkill wvkbd-mobintl || wvkbd-mobintl --bg 1e1e2b --fg 313244 --fg-sp 313244",
        "tooltip-format": "Virtual Keyboard"
    },
    "custom/power": {
        "format": "‚èº",
        "tooltip": false,
        "on-click": "wlogout -c 15 -b 6 -m 400"
    },
    "wlr/taskbar": {
        "format": "{icon}",
        "icon-size": 22,
        "icon-theme": "Numix-Circle",
        "tooltip-format": "{title}",
        "on-click": "activate",
        "on-click-middle": "close"
    },
    "custom/notification": {
        "tooltip": false,
        "format": "{icon}",
        "format-icons": {
            "notification": "Û±Ö´",
            "none": "Û∞Çö",
            "dnd-notification": "Û±èß<span foreground='#1e1e2e'><sup>ÔëÑ</sup></span>",
            "dnd-none": "Û±èß",
            "inhibited-notification": "Û∞Çö<span foreground='#1e1e2e'><sup>ÔëÑ</sup></span>",
            "inhibited-none": "Û∞Çö",
            "dnd-inhibited-notification": "Ôá∑<span foreground='#1e1e2e'><sup>ÔëÑ</sup></span>",
            "dnd-inhibited-none": "Û±èß"
        },
        "return-type": "json",
        "exec-if": "which swaync-client",
        "exec": "swaync-client -swb",
        "on-click": "swaync-client -t -sw",
        "on-click-right": "swaync-client -d -sw",
        "escape": true,
    },
    "privacy": {
        "icon-spacing": 10,
        "icon-size": 16,
        "transition-duration": 250,
        "modules": [
            {
                "type": "screenshare",
                "tooltip": true,
                "tooltip-icon-size": 24
            },
            {
                "type": "audio-out",
                "tooltip": true,
                "tooltip-icon-size": 24
            },
            {
                "type": "audio-in",
                "tooltip": true,
                "tooltip-icon-size": 24
            }
        ],
        "ignore-monitor": true,
        "ignore": [
            {
                "type": "audio-in",
                "name": "cava"
            },
            {
                "type": "screenshare",
                "name": "obs"
            }
        ]
    },
}
